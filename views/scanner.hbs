<h1>Crypto Scanner</h1>

<!-- Filter Inputs -->
<table>
  <tr>
    <td>
      <div>
        <label for="priceMin">Min Price:</label>
        <input type="number" id="priceMin" name="priceMin">
      </div>
    </td>
    <td>
      <div>
        <label for="priceMax">Max Price:</label>
        <input type="number" id="priceMax" name="priceMax">
      </div>
    </td>
    <td>
      <div>
        <label for="marketCapMin">Min Market Cap:</label>
        <input type="number" id="marketCapMin" name="marketCapMin">
      </div>
    </td>
    <td>
      <div>
        <label for="marketCapMax">Max Market Cap:</label>
        <input type="number" id="marketCapMax" name="marketCapMax">
      </div>
    </td>
  </tr>
  <tr>
    <td>
      <div>
        <label for="athMin">Min ATH:</label>
        <input type="number" id="athMin" name="athMin">
      </div>
    </td>
    <td>
      <div>
        <label for="athMax">Max ATH:</label>
        <input type="number" id="athMax" name="athMax">
      </div>
    </td>
    <td>
      <div>
        <label for="atlMin">Min ATL:</label>
        <input type="number" id="atlMin" name="atlMin">
      </div>
    </td>
    <td>
      <div>
        <label for="atlMax">Max ATL:</label>
        <input type="number" id="atlMax" name="atlMax">
      </div>
    </td>
  </tr>
</table>

<!-- Crypto Table -->
<table>
  <thead>
    <tr>
      <th data-sort="name">Name <span id="name-arrow"></span></th>
      <th data-sort="current_price">Price <span id="price-arrow"></span></th>
      <th data-sort="market_cap">Market Cap <span id="market-cap-arrow"></span></th>
      <th data-sort="ath">ATH <span id="ath-arrow"></span></th>
      <th data-sort="atl">ATL <span id="atl-arrow"></span></th>
      <th data-sort="price_change_percentage_24h">24h Change % <span id="change-arrow"></span></th>
    </tr>
  </thead>
  <tbody id="scanner-table-body">
    <!-- Data will be populated here -->
  </tbody>
</table>

<!-- Pagination -->
<div id="pagination" class="pagination">
  <button id="prevPage" disabled>Previous</button>
  <span id="pageNum">Page 1</span>
  
  <input
    type="number"
    id="pageInput"
    min="1"
    value="1"
    placeholder="Go to page"
    style="width: 80px; margin: 0 10px;"
  />
  
  <button id="nextPage">Next</button>
  <span id="totalPages">/ Total: 1</span>
</div>

<script src="/public/js/Scanner.js"></script>
