  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
}

.close-btn {
  position: absolute;
  top: 12px;
  right: 16px;
  font-size: 24px;
  font-weight: bold;
  cursor: pointer;
}

.full-detail-link {
  display: inline-block;
  margin-top: 12px;
  color: #1e88e5;
  font-weight: bold;
  text-decoration: none;
}

.full-detail-link:hover {
