  <script>
    document.getElementById("global-search-form").addEventListener("submit", async function (e) {
      e.preventDefault();
      const name = document.getElementById("global-search-input").value.trim().toLowerCase();
      if (!name) return;

      try {
        const response = await fetch("/api/cryptos");
        const cryptos = await response.json();

        const match = cryptos.find(c => c.name.toLowerCase() === name);
        if (match) {
          window.location.href = `/filter/${match.id}`;
        } else {
          alert("Crypto not found. Please check the name and try again.");
        }
      } catch (err) {
        console.error(err);
        alert("An error occurred while searching.");
      }
    });
